pipeline {

	agent any
	stages {
	
		stage ('checkout') {
			steps {
				git 'https://github.com/swapshri/maven-project.git'
			}
		}
		
		stage ('compile source code') {
			steps {
				withMaven(maven: 'My-Maven') {
					sh 'mvn compile'
				}
			}
		}
				
		
		stage ('test stage') {
			steps {
				withMaven(maven: 'My-Maven') {
					sh 'mvn test'
				}
			}
		}
		

		
		stage ('build and SonarQube analysis') {
			steps {
				 withSonarQubeEnv(sonar: 'SonarPipeline'){	
				    withMaven(maven: 'My-Maven'){
					sh 'mvn clean package sonar:sonar'
				    }
			        }
			}
		}			
	}
}
