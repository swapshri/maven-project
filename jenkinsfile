pipeline {
	agent any
	
	stages {
	
		stage ('checkout') {
			steps {
				git 'https://github.com/swapshri/maven-project.git'
			}
		}
		
		stage ('compile source code') {
			steps {
				withMaven(maven: 'LocalMaven') {
					sh 'mvn compile'
				}
			}
		}
		
		stage ('test stage') {
			steps {
				withMaven(maven: 'LocalMaven') {
					sh 'mvn test'
				}
			}
		}
		
		stage ('package stage') { 
			steps {
				withMaven(maven: 'LocalMaven') {
					sh 'mvn package'
				}
			}
		}
		
		stage ('install stage') {
			steps {
				withMaven(maven: 'LocalMaven') {
					sh 'mvn install'
				}
			}
		}			
	}
}	

